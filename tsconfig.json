{
    "compilerOptions": {
      "module": "es6",
      "target": "es6",
      "lib": ["es6", "dom"],
      "jsx": "react",
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "outDir": "lib",
      "declaration": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }