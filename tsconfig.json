{
    "compilerOptions": {
      "rootDir": ".",
      "module": "commonjs",
      "target": "es5",
      "lib": ["es6", "dom"],
      "allowJs": true,
      "jsx": "react",
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "datamodels",
      "automations",
      "acceptance-tests",
      "webpack"
    ]
  }